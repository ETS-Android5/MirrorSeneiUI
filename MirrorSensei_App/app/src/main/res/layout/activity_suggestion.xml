<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendationActivity">

    <ImageView
        android:id="@+id/logo_recommendation"
        android:layout_width="106dp"
        android:layout_height="102dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mirror_logo" />

    <ImageView
        android:id="@+id/yoga_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="96dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/yoga_pic" />

    <ImageButton
        android:id="@+id/yoga_button1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/yoga_button2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yoga_button1"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/yoga_button2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yoga_button2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textfortap"
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="#5DC5F4"
        android:gravity="center"
        android:text="Start Tutorials"
        android:textColor="#531515"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/yoga_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>